{
  "actions": [
    {
      "id": "get_invoices",
      "name": "Get Invoices",
      "description": "Retrieves a list of invoices from Stripe",
      "parameters": {
        "limit": {
          "type": "number",
          "description": "Maximum number of invoices to return",
          "optional": true,
          "default": 10
        },
        "status": {
          "type": "string",
          "description": "Filter invoices by status",
          "optional": true,
          "enum": ["draft", "open", "paid", "uncollectible", "void"]
        }
      },
      "outputSchema": {
        "type": "array",
        "items": {
          "type": "object",
          "properties": {
            "id": { "type": "string" },
            "amount": { "type": "number" },
            "status": { "type": "string" },
            "customer": { "type": "string" }
          }
        }
      }
    },
    {
      "id": "create_invoice",
      "name": "Create Invoice",
      "description": "Creates a new invoice in Stripe",
      "parameters": {
        "customer": {
          "type": "string",
          "description": "Stripe customer ID"
        },
        "amount": {
          "type": "number",
          "description": "Invoice amount in cents"
        },
        "description": {
          "type": "string",
          "description": "Invoice description",
          "optional": true
        }
      },
      "outputSchema": {
        "type": "object",
        "properties": {
          "id": { "type": "string" },
          "amount": { "type": "number" },
          "status": { "type": "string" },
          "customer": { "type": "string" }
        }
      }
    }
  ]
} 